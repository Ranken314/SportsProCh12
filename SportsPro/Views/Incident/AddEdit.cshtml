@model Incident

@{
    string title = ViewBag.Action + " Incident";
    ViewBag.Title = title;
}

<h1>@ViewBag.Title</h1>

<form asp-action="Save" method="post">
    <div asp-validation-summary="All" class="text-danger"> </div>

    <div class="form-group">
        <label asp-for="CustomerID">Customer</label>
        <select asp-for="CustomerID" class="form-control">
            <option value="">Select a Customer</option>
            @foreach (Customer c in ViewBag.Customer)
            {
                <option value="@c.CustomerID">@c.FullName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ProductID">Product</label>
        <select asp-for="ProductID" class="form-control">
            <option value="">Select a Product</option>
            @foreach (Product p in ViewBag.Product)
            {
                <option value="@p.ProductID">@p.ProductName</option>
            }
        </select>
    </div>


    <div class="form-group">
        <label asp-for="Title">Ttile</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="DateOpened">Date Opened</label>
        <input type="text" asp-for="DateOpened" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DateClosed">Date Closed</label>
        <input type="text" asp-for="DateClosed" class="form-control" />
    </div>

    <input type="hidden" asp-for="IncidentID" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>

</form>