@model Customer

@{
    string title = ViewBag.Action + " Customer";
    ViewBag.Title = title;
}

<h1>@ViewBag.Title</h1>

<form asp-action="Save" method="post">
    <div asp-validation-summary="All" class="text-danger"> </div>

    <div class="row form-group">
        <label asp-for="FirstName" class="col-3">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="row form-group">
        <label asp-for="LastName" class="col-3">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="row form-group">
        <label asp-for="Address" class="col-3">Address</label>
        <input asp-for="Address" class="form-control" />
    </div>


    <div class="row form-group">
        <label asp-for="City" class="col-3">City</label>
        <input asp-for="City" class="form-control" />
    </div>

    <div class="row form-group">
        <label asp-for="State" class="col-3">State</label>
        <input asp-for="State" class="form-control" />
    </div>
    <div class="row form-group">
        <label asp-for="PostalCode" class="col-3">Postal Code</label>
        <input asp-for="PostalCode" class="form-control" />
    </div>
    <div class="row form-group">
        <label asp-for="City" class="col-3">City</label>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="row-form-group">
        <label asp-for="CountryID" class="col-sm-3">Cuontry</label>
        <div class="col">
            <select asp-for="CountryID" class="form-control">
                <option value="">Select a Country</option>
                @foreach(Country c in ViewBag.Countries)
                {
                    <option value="@c.CountryID">@c.CountryName</option>
                }
            </select>
        </div>
        <div class="row form-group">
            <label asp-for="Email" class="col-3">Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="row form-group">
            <label asp-for="Phone" class="col-3">Phone</label>
            <input asp-for="Phone" class="form-control" />
        </div>
    </div>


    <input type="hidden" asp-for="CustomerID" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>

</form>
