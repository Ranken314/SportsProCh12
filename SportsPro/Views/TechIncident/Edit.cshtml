@using SportsPro.Models.ViewModels;
@model TechIncidentViewModel

@{
    ViewBag.Title = "Edit Incident";
}

@section script{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.unobtrusive.min.js"></script>
}

<h1>@ViewBag.Title</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <lable class="w-25">Technician:</lable>
        <lable>@Model.Technician?.TechnicianName</lable>
    </div>
    <div class="form-group">
        <lable class="w-25">Customer:</lable>
        <lable>@Model.Incident?.Customer.FullName</lable>
    </div>
    <div class="form-group">
        <lable class="w-25">Product:</lable>
        <lable>@Model.Incident?.Product.ProductName</lable>
    </div>
    <div class="form-group">
        <lable class="w-25">Title:</lable>
        <lable>@Model.Incident?.Title</lable>
    </div>
    <div class="form-group">
        <lable class="w-25">Date Opened:</lable>
        <lable>@Model.Incident?.DateOpened</lable>
    </div>
    <div class="form-group">
        <lable class="w-25">Description:</lable>
        <textarea asp-for="Incident.Description" class="form-control"></textarea>
    </div>
    <div class="form-control">
        <label asp-for="Incident.DateClosed">Date Closed</label>
        <input type="text" asp-for="Incident.DateClosed" class="form-control" />
    </div>

    <input type="hidden" asp-for="Incident.IncidentID" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List" asp-route-id="@Model.Technician?.TechnicianID"
        class="btn btn-primary">Cancel</a>

</form>